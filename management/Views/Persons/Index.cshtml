@model List<Person>

@{
    ViewData["Title"] = "Persons List";
}

<h2>Persons </h2>
<br/>
<h5>Person Management is the process of efficiently handling and organizing individual information.
    It involves tasks such as adding, editing, viewing,
    and deleting records while ensuring data accuracy and accessibility.
    It’s commonly used in systems like employee databases, customer directories,
    or membership tracking tools</h5>
<br/>
<div class="d-flex justify-content-between">
    <div class="col-xs-6 text-left">
        <a asp-action="Create" class="btn btn-primary">Create New Person</a>
    </div>
    <div class="col-xs-6 text-right">
        <form class="d-flex" asp-action="Index" asp-controller="Persons">
            <input name="SearchString" type="search" placeholder="Search" aria-label="Search" />
            <button class="btn btn-outline-primary" type="submit">Search</button>
            <button asp-action="Index" class="btn btn-secondary">Back to List</button>
        </form>
    </div>
</div>
<table class="table table-striped">
    <thead>
        <tr>
            <th>ID Number</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var person in Model)
        {
            <tr>
                <td>@person.id_number</td>
                <td>@person.Name</td>
                <td>@person.Surname</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@person.Code" class="btn btn-warning" data-toggle="modal" data-target="#myModal">Edit</a>
                    <a asp-action="Delete" asp-route-id="@person.Code" class="btn btn-danger">Delete</a>
                    <!-- View File (Index.cshtml) -->
                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal">
                        Launch Modal
                    </button>
                    <div id="myModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="modalTitle" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h4 id="modalTitle" class="modal-title">Modal Title</h4>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    <p>Modal Content Goes Here</p>
                                </div>
                            </div>
                        </div>
                    </div>

                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    @if (ViewBag.PageNumber > 1)
    {
        <a href="?pageNumber=@(ViewBag.PageNumber - 1)">Previous</a>
    }
    Page @ViewBag.PageNumber
    @if ((ViewBag.PageNumber * ViewBag.PageSize) < ViewBag.TotalItems)
    {
        <a href="?pageNumber=@(ViewBag.PageNumber + 1)">Next</a>
    }
</div>