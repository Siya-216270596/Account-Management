@model Person

<!-- Modal -->
<div class="modal fade" id="Delete-@Model.Code" tabindex="-1" aria-labelledby="DeleteModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document" id="DeleteModal">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="DeleteModalLabel">@Model.Name @Model.Surname</h5>
                <button type="button" class="btn-close" data-dismiss="modal" aria-label="Close"></button>

            </div>
            <div class="modal-body">
                <div id="successAlert-@Model.Code" class="alert alert-success d-none" role="alert"></div>
                <div id="failureAlert-@Model.Code" class="alert alert-danger d-none" role="alert"></div>
                <form asp-action="Delete" method="post" class="ajax-form" data-alert-container="successAlert-@Model.Code">
                    <input type="hidden" name="_method" value="DELETE" />
                    <input type="hidden" asp-for="Code" />
                    <!-- Person Information -->
                        <p>Are you sure you want to Delete?</p>
                    <!-- Submit Button -->
                    <div class="modal-footer">
                        <input type="submit" id="DeleteButton" value="Delete" class="btn btn-danger" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
