@model Person

<!-- Modal -->
<div class="modal fade" id="View-@Model.Code" tabindex="-1" aria-labelledby="EditModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">@Model.Name @Model.Surname</h5>
            </div>
            <div class="modal-body">
                <div class="container mt-4">
                    <!-- Tabs Navigation -->
                    <ul class="nav nav-tabs" id="personAccountTabs" role="tablist">
                        <li class="nav-item" role="presentation">
                            <button class="nav-link active" id="person-tab" data-bs-toggle="tab" data-bs-target="#person" type="button" role="tab" aria-controls="person" aria-selected="true">
                                Person Information
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="account-tab" data-bs-toggle="tab" data-bs-target="#account" type="button" role="tab" aria-controls="account" aria-selected="false">
                                Account Information
                            </button>
                        </li>
                    </ul>

                    <!-- Tabs Content -->
                    <div class="tab-content" id="personAccountTabsContent">
                        <!-- Person Tab -->
                        <div class="tab-pane fade show active text-start" id="person" role="tabpanel" aria-labelledby="person-tab">
                            <h4 class="mt-3">Person Details</h4>
                            <ul class="list-group">
                                <li class="list-group-item"><strong>ID Number:</strong> @Model.id_number</li>
                                <li class="list-group-item"><strong>Name:</strong> @Model.Name</li>
                                <li class="list-group-item"><strong>Surname:</strong> @Model.Surname</li>
                            </ul>
                        </div>

                        <!-- Account Tab -->
                        <div class="tab-pane fade show active text-start" id="account" role="tabpanel" aria-labelledby="account-tab">
                            <h4 class="mt-3">Account Details</h4>
                            <table class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>Account Number</th>
                                        <th>Balance</th>
                                        <th>Outstanding Balance</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var account in Model.Account)
                                    {
                                        <tr>
                                            <td>@account.account_number</td>
                                            <td>@account.outstanding_balance.ToString("C")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>