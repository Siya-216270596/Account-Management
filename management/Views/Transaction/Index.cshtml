@model List<Transaction>

@{
    ViewData["Title"] = "Transactions List";
}

<h2>Transactions for Account @ViewBag.AccountNumber</h2>

<p>
    <a asp-action="Create" asp-route-accountId="@ViewBag.AccountId" class="btn btn-primary">Create New Transaction</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Date</th>
            <th>Amount</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var transaction in Model)
        {
            <tr>
                <td>@transaction.Date.ToShortDateString()</td>
                <td>@transaction.Amount.ToString("C")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@transaction.Code" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@transaction.Code" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-controller="Account" asp-action="Index" asp-route-personId="@ViewBag.PersonId" class="btn btn-secondary">Back to Accounts</a>