@model List<Account>

@{
    ViewData["Title"] = "Accounts";
}

<h2>Accounts for @ViewBag.AccountNumber</h2>

    <p>
        <a asp-action="Create" asp-route-personId="@ViewBag.PersonCode" class="btn btn-primary">Create New Account</a>
    </p>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Account Number</th>
                <th>Balance</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var account in Model)
            {
                <tr>
                    <td>@account.AccountNumber</td>
                    <td>@account.Balance.ToString("C")</td>
                    <td>@(account.IsClosed ? "Closed" : "Active")</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@account.Code" class="btn btn-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@account.Code" class="btn btn-danger">Delete</a>
                        <a asp-controller="Transactions" asp-action="Index" asp-route-accountId="@account.Code" class="btn btn-info">View Transactions</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <a asp-controller="Persons" asp-action="Index" class="btn btn-secondary">Back to Persons</a>
