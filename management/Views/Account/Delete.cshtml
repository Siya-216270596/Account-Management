@model Account

@{
    ViewData["Title"] = "Delete Account";
}

<h2>Delete Account</h2>

<h3>Are you sure you want to delete this account?</h3>
<div>
    <h4>Account Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Account Number</dt>
        <dd class="col-sm-10">@Model.AccountNumber</dd>
        <dt class="col-sm-2">Balance</dt>
        <dd class="col-sm-10">@Model.Balance.ToString("C")</dd>
        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@(Model.IsClosed ? "Closed" : "Active")</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Code" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" asp-route-personId="@Model.PersonCode" class="btn btn-secondary">Back to List</a>
    </form>
</div>